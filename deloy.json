{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "variables": {
      "container1name": "mysqlapp",
      "container1image": "pekumirui/mysql"
    },
    "resources": [
      {
        "name": "mysqlapp",
        "type": "Microsoft.ContainerInstance/containerGroups",
        "apiVersion": "2019-12-01",
        "location": "[resourceGroup().location]",
        "properties": {
          "containers": [
            {
              "name": "[variables('container1name')]",
              "properties": {
                "image": "[variables('container1image')]",
                "resources": {
                  "requests": {
                    "cpu": 1,
                    "memoryInGb": 1.5
                  }
                },
                "ports": [
                  {
                    "port": 3306
                  }
                ],
                "volumeMounts": [
                  {
                    "name": "initdata",
                    "mountPath": "/docker-entrypoint-initdb.d"
                  },
                  {
                    "name": "sqldata",
                    "mountPath": "/var/lib/mysql"
                  }
                ]
              }
            }
          ],
          "osType": "Linux",
          "ipAddress": {
            "type": "Public",
            "ports": [
              {
                "protocol": "tcp",
                "port": "3306"
              }
            ],
            "dnsNameLabel": "mysql-demo"
          },
          "volumes": [
            {
              "name": "initdata",
              "azureFile": {
                  "shareName": "sql",
                  "storageAccountName": "stockdbmount",
                  "storageAccountKey": "vBogSp/mPLEUO2JBzOCpaUE3/cTDLnujEXHZGbGG8FYeNQ/74a3uxX9ANlyDuISmtAM4vUq6Craq+AStGSHA7A=="
              }
            },
            {
              "name": "sqldata",
              "azureFile": {
                  "shareName": "data",
                  "storageAccountName": "stockdbmount",
                  "storageAccountKey": "vBogSp/mPLEUO2JBzOCpaUE3/cTDLnujEXHZGbGG8FYeNQ/74a3uxX9ANlyDuISmtAM4vUq6Craq+AStGSHA7A=="
              }
            }
          ]
        }
      }
    ]
  }